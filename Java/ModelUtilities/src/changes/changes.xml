<document xmlns="http://maven.apache.org/changes/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
	<properties>
		<title>Changes</title>
		<author email="grzegorz.lehmann@dai-labor.de">Grzegorz Lehmann</author>
	</properties>
	<body>
        <release version="1.0" date="2008-05-15" description="MASP Milestone 7">
            <action dev="lehmann" type="add">First release</action>
        </release>
        <release version="1.0.1" date="2008-06-05" description="Minor enhancements">
            <action dev="lehmann" type="add">Searching for JARs in .masp inside user's home directory when MASP_CLASSPATH is not specified</action>
            <action dev="lehmann" type="add">Allowed to provide a parent classloader for loading classes</action>
        </release>
        <release version="1.0.2" date="2008-06-09" description="CompositeClassLoader">
            <action dev="lehmann" type="add">Added CompositeClassLoader that uses multiple other class loaders to load classes</action>
        </release>
        <release version="1.0.3" date="2008-06-17" description="Logging">
            <action dev="lehmann" type="add">Added log4j-1.2.14 dependency and a log4j.xml to allow logging in MASP editors</action>
            <action dev="lehmann" type="add">Added LoggingAdapter which logs all model occurrences. This adapter can be used for debugging of models</action>
        </release>
        <release version="1.0.4" date="2008-07-09" description="CompositeClassLoader">
            <action dev="lehmann" type="add">Added CompositeClassLoader(ClassLoader parent) constructor</action>
            <action dev="lehmann" type="update">Optimized CompositeClassLoader by caching class names mapped to class loaders, which successfully loaded the class in the past</action>
        </release>
        <release version="1.0.5" date="2008-10-14" description="ListAdapterUtility">
            <action dev="lehmann" type="add">Added ListAdapterUtility that allows to easily observe model elements with lists</action>
        </release>
        <release version="1.1" date="2009-05-09" description="M3_2009">
            <action dev="lehmann" type="add">Added MASPDirectory utility providing easy access to a general MASP directory on the local machine</action>
            <action dev="lehmann" type="add">Added EcoreUtility providing utility methods for Ecore metamodels and models</action>
        </release>
        <release version="1.1.2" date="2009-11-13" description="EMF 2.5">
            <action dev="lehmann" type="update">Updated EMF dependencies from version 2.4.0 to 2.5.0</action>
        </release>
        <release version="1.1.3" date="2010-01-15" description="MASPDirectory extensions">
            <action dev="lehmann" type="add">Added MASPDirectory.loadModelFromXMI and saveModelToXMI</action>
        </release>
        <release version="1.1.4" date="2010-04-13" description="Better exception messages">
            <action dev="lehmann" type="update">MASPDirectory.loadModelFromXMI provides better exception messages in case a model cannot be loaded</action>
        </release>
        <release version="1.1.5" date="2010-11-24" description="Added ModelUtilities model">
            <action dev="lehmann" type="add">Added ModelUtilities model with an Entry to ease the development of proxies that need key/value configuration entries.</action>
        </release>
        <release version="1.1.6" date="2010-11-24" description="EntryUtility">
            <action dev="lehmann" type="add">Added EntryUtility.getEntry(String,String).</action>
        </release>
        <release version="1.1.7" date="2011-02-18" description="MASPDirectory">
            <action dev="lehmann" type="add">Added MASPDirectory.loadSingletonModelFromXMI that caches loaded MASP directory models.</action>
        </release>
        <release version="1.1.8" date="t.b.a" description="t.b.a.">
        </release>
	</body>
</document>