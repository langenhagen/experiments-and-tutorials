# the different ways of wrapping things up in colons in if-clauses :)

SET(myvar1 "MyValue")
SET(myvar2 "")
SET(myvar3)
# myvar4 is NOT set
SET(myvar5 myvar4)
SET(myvar6 ${myvar4})
SET(myvar7 ON)               # ON / YES / TRUE / true / ...all the same, I believe


message( "1. checks à la if(var) --- aka, set to something directly other than nothing or \"\"")
if(myvar1)
    message("myvar1 ${myvar1}")
endif()
if(myvar2)
    message("myvar2 ${myvar2}")
endif()
if(myvar3)
    message("myvar3 ${myvar3}")
endif()
if(myvar4)
    message("myvar4 ${myvar4}")
endif()
if(myvar5)
    message("myvar5 ${myvar5}")
endif()
if(myvar6)
    message("myvar6 ${myvar6}")
endif()
if(myvar7)
    message("myvar7 ${myvar7}")
endif()

